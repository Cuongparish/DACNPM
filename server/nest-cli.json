{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/cv-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/cv-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/cv-service",
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "cv-service": {
      "type": "application",
      "root": "apps/cv-service",
      "entryFile": "main",
      "sourceRoot": "apps/cv-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cv-service/tsconfig.app.json",
        "watchAssets": true
      }
    }
  }